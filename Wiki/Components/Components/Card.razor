<div class="card min-h-450 ms-2 me-2" style="width: 18rem;">
    <img src="@Img" class="card-img-top " alt="@ImgAltText">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Title</h5>
        <p class=" card-text">@TextContent</p>
        <div class="mt-auto justify-content-center d-flex">
            <a href="@Link" class="btn btn-primary">@LinkText</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string TextContent { get; set; }
    [Parameter] public string Link { get; set; }
    [Parameter] public string LinkText { get; set; }
    [Parameter] public string Img { get; set; }
    [Parameter] public string ImgAltText { get; set; }
     
}